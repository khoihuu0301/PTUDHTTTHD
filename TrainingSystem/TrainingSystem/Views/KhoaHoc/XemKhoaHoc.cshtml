@model IEnumerable<TrainingSystem.Models.KhoaHoc>

@{
    ViewBag.Title = "XemKhoaHoc";
}

<h2 style="text-align:center">Danh Sách Khóa Học</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form asp-controller="KhoaHoc" asp-action="XemKhoaHoc" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaKhoaHoc)<br />
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenKhoaHoc) <br/>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NguoiHuongDan)<br />
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKhoaHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhoaHoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiHuongDan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaKhoaHoc }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaKhoaHoc }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaKhoaHoc })
        </td>
    </tr>
}

</table>

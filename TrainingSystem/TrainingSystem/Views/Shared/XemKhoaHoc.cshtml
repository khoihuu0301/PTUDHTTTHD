@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Xem Danh Sách Khóa Học";
}
@model IEnumerable<TrainingSystem.Models.KhoaHoc>
@using GridMvc.Html

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    <title>Xem danh sách khóa học</title>
</head>
<style>

</style>
<header>
    <h2 style="text-align:center">Xem Danh Sách Khóa Học</h2>
</header>
<body>
    <section>
        <div class="text-center">
            <form action="" method="">
                <input type="text" placeholder="Tìm kiếm khóa học..."/>
                <input type="submit" value="Tìm kiếm"/>
                </br>
            </form>
        <div style="width:500px;">
        @Html.Grid(Model).Columns(columns => 
                    {
                        columns.Add(c => c.MaKhoaHoc.Titled("Mã Khóa Học");
                        columns.Add(c => c.TenKhoaHoc).Titled("Tên Khóa Học").Filterable(true);
                        columns.Add(c => c.Trainer).Titled("Người giảng dạy");
                    }).WithPaging(3).Sortable(true))
    </div>
  </div>
    </section>
</body>
